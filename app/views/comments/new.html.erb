<%= turbo_frame_tag id="tweet_#{@tweet.id}_new_comment" do %>  
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "errors") %> prohibited this post from being saved:</h2>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @comment, url: tweet_comments_path(@tweet)) do |form| %>
